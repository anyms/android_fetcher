<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/colorWhite"
    android:paddingTop="30dp"
    android:paddingBottom="30dp"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/downloadLimitView"
        android:textColor="@color/colorContent"
        android:paddingStart="10dp"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:text="@string/download_limit_for_every_cycle_4mb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <SeekBar
        android:progress="3"
        android:max="7"
        android:id="@+id/downloadLimitSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/numOfThreadView"
        android:textColor="@color/colorContent"
        android:paddingTop="20dp"
        android:paddingStart="10dp"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:text="@string/number_of_thread_s_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <SeekBar
        android:progress="9"
        android:max="9"
        android:id="@+id/numOfThreadSeekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>